{
  "name": "docs-as-system-vscode-extension",
  "displayName": "Docs-as-System",
  "description": "Create and manage Docs-as-System projects directly inside VS Code.",
  "version": "0.0.1",
  "publisher": "tomer-kedem",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "docs-as-system",
    "documentation",
    "ai",
    "starter-kit",
    "hebrew",
    "llm",
    "agent",
    "developer-tools",
    "project-generator"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docsAsSystem.initProject",
        "title": "Create New Docs-as-System Project",
        "category": "Docs-as-System"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomkedem/Docs-as-System-VSCode-Extension.git"
  },
  "homepage": "https://tomkedem.github.io/Docs-as-System/",
  "bugs": {
    "url": "https://github.com/tomkedem/Docs-as-System-VSCode-Extension/issues"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.1",
    "@types/vscode": "^1.106.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
